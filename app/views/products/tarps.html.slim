    .col-md-6
      = carousel 'tarp_tent_ul_carousel',
        { 'products/tarp_tent_ul.jpg' => t('.90_degree_tarp_tent'),
          'products/tarp_tent_ul_empty.jpg' => t('.90_degree_tarp_tent_over_an_empty_hammock'),

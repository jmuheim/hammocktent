.modal.fade id="accept_toc_#{id}" tabindex="-1" data-backdrop="static"
  .modal-dialog
    .modal-content
      .modal-header
        button type="button" class="close" data-dismiss="modal"
          span aria-hidden="true" &times;
          span.sr-only = t '.close'
        h4 class="modal-title" Thank you for your interest!

      .modal-body
        .row
          .col-md-6
            p Please note that by continuing you are agreeing to our terms and conditions. Read them carefully.

            ul
              li = link_to t('.terms_and_conditions'), page_path('terms_and_conditions'), target: '_blank'
              li = link_to t('.shipping_info'), page_path('shipping_info'), target: '_blank'

          .col-md-6
            p The ordering process is handled through PayPal. You will return to our site afterwards.

            = image_tag 'paypal.png', width: 200

      .modal-footer
        form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="paypal"
          input name="cmd" type="hidden" value="_s-xclick"
          input name="hosted_button_id" type="hidden" value="#{id}"
          input type="hidden" name="currency_code" value="CHF"

          - if options.any?
            input type="hidden" name="on0" value="customization"

            .row
              .col-md-3
                label for="customization_#{id}" Customize:

              .col-md-9
                select id="customization_#{id}" name="os0"
                  - options.each do |key, value|
                    option value=key = value

          .row
            .col-md-12
              button.btn.btn-danger type="submit" = t '.i_fully_agree_please_proceed'

      p = t '.features_4_doors_that_can_be_rolled_down'

      p = t '.the_depicted_hammock_is_not_part_of_the_tarp_tent'

  .specs
    .row
      .col-md-12
        h3 = t '.specifications'

    .row
      .col-md-6
        ul.specs
          li = t '.dimensions'
          li = t '.4_doors_with_attachment_loops'
          li = t '.can_be_pitched_independently'
          li = t '.reinforced_tie_out_loops_with_guy_lines'
          li = t '.comes_in_a_cuban_fibre_stuff_bag'
          li = t '.8_guy_lines'
          li = t '.2_of_the_guy_lines'

      .col-md-6
        ul.specs
          li = t '.10_stakes_are_required'
          li
            = t '.ultralight_titanium_stakes_are_sold_separately_html', accessories: link_to(t('.accessories'))
          li = t '.catenary_cut_edges_for_a_taut_pitch'
          li = t '.made_by_zpacks_html', zpacks: link_to('ZPacks', 'http://www.zpacks.com')
          li #{t '.weight'}: 272 g + #{t '.guy_lines'} 102 g + #{t '.stuff_bag'} 6 g = 380 g (13.5 oz)
          li = price 385

        = add_to_cart_button('HZE28YHCFMECS')


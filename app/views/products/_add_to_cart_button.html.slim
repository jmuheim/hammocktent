.modal.fade id="accept_toc_#{id}" tabindex="-1" data-backdrop="static"
  .modal-dialog
    .modal-content
      .modal-header
        button type="button" class="close" data-dismiss="modal"
          span aria-hidden="true" &times;
          span.sr-only = t '.close'
        h4 class="modal-title" = t '.thanks_for_your_interest'

      .modal-body
        .row
          .col-md-6
            p
              = t('.before_proceeding_though_please_read_carefully') + ':'

            ul
              li = link_to t('.terms_and_conditions'), page_path('terms_and_conditions'), target: '_blank'
              li = link_to t('.shipping_info'), page_path('shipping_info'), target: '_blank'

          .col-md-6
            p = t '.the_ordering_process_is_handled_through_paypal'

            = image_tag 'paypal.png', width: 200

      .modal-footer
        form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="paypal"
          input name="cmd" type="hidden" value="_s-xclick"
          input name="hosted_button_id" type="hidden" value="#{id}"
          button.btn.btn-danger type="submit" = t '.i_fully_agree_please_proceed'
